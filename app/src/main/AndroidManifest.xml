<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cotemig.renato.uaifood">

    <application
        android:name=".app.AppUaiFood"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_uaifood"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_uaifood_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UaiFood">
        <activity
            android:name=".ui.activities.CartActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.DetalheProdutoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ProdutoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ForgotActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DetalheProdutoActivity">

    <ImageView
        android:id="@+id/img_produto_detalhe"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/nome_produto_detalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_produto_detalhe"
        android:text="Hamburger Pelas"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/desc_produto_detalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_produto_detalhe"
        android:text="Famoso e delicioso hamburger Famoso e delicioso hamburger
        Famoso e delicioso hamburger Famoso e delicioso hamburger Famoso e delicioso hamburger"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/valor_produto_detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_produto_detalhe"
        android:layout_marginHorizontal="20dp"
        android:text="R$ 25,90"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/green"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/obs_produto_detalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor_produto_detalhe"
        android:layout_marginHorizontal="20dp"
        android:hint="Alguma Observação?"
        android:textSize="15dp"
        android:background="@null"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:id="@+id/linear_barra_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <Button
                android:id="@+id/btn_menos"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"/>

            <TextView
                android:id="@+id/txt_qtd"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btn_mais"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Adicionar     R$ 25,90"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
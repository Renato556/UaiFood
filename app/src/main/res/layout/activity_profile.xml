<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ProfileActivity">

    <ImageButton
        android:id="@+id/backEstabelecimentos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Perfil"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backEstabelecimentos"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Nome cadastrado"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/nome_salvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome"
        android:fontFamily="@font/roboto_regular"
        android:text="Maria Chiquinha"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nome_salvo"
        android:fontFamily="@font/roboto_bold"
        android:text="Email cadastrado"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/email_salvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:fontFamily="@font/roboto_regular"
        android:text="email@uaifood.com.br"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/email_salvo"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/style_button_primary"
        android:fontFamily="@font/roboto_bold"
        android:text="Logout"
        android:textColor="@color/white" />

</RelativeLayout>